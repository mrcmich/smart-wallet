<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_new_movement"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.NewMovementFragment">

    <Spinner
        android:id="@+id/spinner_new_movement_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/very_small_gap"
        android:layout_marginTop="@dimen/small_gap"
        android:layout_marginEnd="@dimen/very_small_gap"
        android:spinnerMode="dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_new_movement_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/very_small_gap"
        android:layout_marginTop="@dimen/very_small_gap"
        android:layout_marginEnd="@dimen/very_small_gap"
        android:spinnerMode="dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_new_movement_type" />

    <Spinner
        android:id="@+id/spinner_target_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/very_small_gap"
        android:layout_marginTop="@dimen/very_small_gap"
        android:layout_marginEnd="@dimen/very_small_gap"
        android:layout_marginBottom="@dimen/small_gap"
        android:spinnerMode="dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_new_movement_type" />

</android.support.constraint.ConstraintLayout>